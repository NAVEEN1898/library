<h1><%= @plan.plan_name %></h1>
<p><%= @plan.plan_description %></p>
<p><%= @plan.plan_rate %></p>

<ul>
  <% if current_user.admin? %>
    <li><%= link_to "Edit", edit_admin_plan_path(id: @plan.id) %></li>
    <li><%= link_to "Destroy", admin_plan_path(id: @plan.id), data: {
                  method: :delete,
                  confirm: "Are you sure?"
                } %></li><br/>
    <li><%= link_to "All Users", all_users_path(id: @plan.id) %> </li>     
  <% else %>
      <%= link_to "Buy now", buy_path(user: {id: current_user.id, plan_id: @plan.id}) %>
  <% end %>
</ul>

 